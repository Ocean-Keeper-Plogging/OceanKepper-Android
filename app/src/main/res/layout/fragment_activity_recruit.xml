<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="activityRecruitViewModel"
            type="com.letspl.oceankepper.ui.viewmodel.ActivityRecruitViewModel" />

        <variable
            name="activityRecruitFragment"
            type="com.letspl.oceankepper.ui.view.ActivityRecruitFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/back_icon_ll"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="22dp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/back_icon_iv"
                android:layout_width="9dp"
                android:layout_height="16dp"
                android:src="@drawable/title_left_icon" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_bold"
            android:text="신규 활동 모집"
            android:textColor="@color/gray_scale_g900"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="@id/back_icon_ll"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/back_icon_ll" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_marginTop="55dp"
            android:layout_marginBottom="64dp"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/project_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/pretendard_medium"
                    android:text="프로젝트 이름"
                    android:textColor="@color/gray_scale_g900"
                    android:textSize="14dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="*"
                    android:textColor="@color/primary_color_p500"
                    app:layout_constraintStart_toEndOf="@+id/project_name_tv"
                    app:layout_constraintTop_toTopOf="@id/project_name_tv" />

                <EditText
                    android:id="@+id/project_name_et"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="16dp"
                    android:backgroundTint="@color/blue_grayscale_bg100"
                    android:hint="활동 프로젝트명 입력"
                    android:maxLength="30"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:textColorHint="@color/blue_grayscale_bg200"
                    android:textSize="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/project_name_tv"
                    app:layout_constraintTop_toBottomOf="@id/project_name_tv" />

                <TextView
                    android:id="@+id/project_name_length_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_medium"
                    android:text="글자수 제한 0/30"
                    android:textColor="@color/gray_scale_g500"
                    android:textSize="14dp"
                    app:layout_constraintEnd_toEndOf="@id/project_name_et"
                    app:layout_constraintTop_toBottomOf="@id/project_name_et" />

                <TextView
                    android:id="@+id/activity_location_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/pretendard_medium"
                    android:text="활동 위치"
                    android:textColor="@color/gray_scale_g900"
                    android:textSize="14dp"
                    app:layout_constraintStart_toStartOf="@id/project_name_tv"
                    app:layout_constraintTop_toBottomOf="@+id/project_name_length_tv" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="*"
                    android:textColor="@color/primary_color_p500"
                    app:layout_constraintStart_toEndOf="@+id/activity_location_tv"
                    app:layout_constraintTop_toTopOf="@id/activity_location_tv" />

                <EditText
                    android:id="@+id/activity_location_et"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="16dp"
                    android:backgroundTint="@color/blue_grayscale_bg100"
                    android:hint="위치 검색"
                    android:maxLength="30"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:textColorHint="@color/blue_grayscale_bg200"
                    android:textSize="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/project_name_tv"
                    app:layout_constraintTop_toBottomOf="@id/activity_location_tv" />

                <TextView
                    android:id="@+id/traffic_guide_status_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/pretendard_medium"
                    android:text="교통 안내 여부"
                    android:textColor="@color/gray_scale_g900"
                    android:textSize="14dp"
                    app:layout_constraintStart_toStartOf="@id/project_name_tv"
                    app:layout_constraintTop_toBottomOf="@+id/activity_location_et" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="*"
                    android:textColor="@color/primary_color_p500"
                    app:layout_constraintStart_toEndOf="@+id/traffic_guide_status_tv"
                    app:layout_constraintTop_toTopOf="@id/traffic_guide_status_tv" />

                <View
                    android:id="@+id/car_sharing_v"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/radius_6_solid_fff_stroke_g300"
                    app:layout_constraintStart_toStartOf="@id/traffic_guide_status_tv"
                    app:layout_constraintTop_toBottomOf="@id/traffic_guide_status_tv" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:fontFamily="@font/pretendard_medium"
                    android:text="카셰어링 연결 예정"
                    android:textColor="@color/gray_scale_g900"
                    android:textSize="14dp"
                    app:layout_constraintBottom_toBottomOf="@id/car_sharing_v"
                    app:layout_constraintStart_toEndOf="@id/car_sharing_v"
                    app:layout_constraintTop_toTopOf="@id/car_sharing_v" />

                <View
                    android:id="@+id/group_car_sharing_v"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/radius_6_solid_fff_stroke_g300"
                    app:layout_constraintStart_toStartOf="@id/traffic_guide_status_tv"
                    app:layout_constraintTop_toBottomOf="@id/car_sharing_v" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:fontFamily="@font/pretendard_medium"
                    android:text="단체차량 대절 예정"
                    android:textColor="@color/gray_scale_g900"
                    android:textSize="14dp"
                    app:layout_constraintBottom_toBottomOf="@id/group_car_sharing_v"
                    app:layout_constraintStart_toEndOf="@id/group_car_sharing_v"
                    app:layout_constraintTop_toTopOf="@id/group_car_sharing_v" />

                <View
                    android:id="@+id/no_car_sharing_v"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/radius_6_solid_fff_stroke_g300"
                    app:layout_constraintStart_toStartOf="@id/group_car_sharing_v"
                    app:layout_constraintTop_toBottomOf="@id/group_car_sharing_v" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:fontFamily="@font/pretendard_medium"
                    android:text="교통편 제공 없음"
                    android:textColor="@color/gray_scale_g900"
                    android:textSize="14dp"
                    app:layout_constraintBottom_toBottomOf="@id/no_car_sharing_v"
                    app:layout_constraintStart_toEndOf="@id/no_car_sharing_v"
                    app:layout_constraintTop_toTopOf="@id/no_car_sharing_v" />

                <TextView
                    android:id="@+id/recruit_category_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/pretendard_medium"
                    android:text="모집 카테고리 선택"
                    android:textColor="@color/gray_scale_g900"
                    android:textSize="14dp"
                    app:layout_constraintStart_toStartOf="@id/project_name_tv"
                    app:layout_constraintTop_toBottomOf="@+id/no_car_sharing_v" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="*"
                    android:textColor="@color/primary_color_p500"
                    app:layout_constraintStart_toEndOf="@+id/recruit_category_tv"
                    app:layout_constraintTop_toTopOf="@id/recruit_category_tv" />

                <TextView
                    android:id="@+id/category_1_tv"
                    android:layout_width="97dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/radius_20_solid_p50"
                    android:fontFamily="@font/pretendard_medium"
                    android:gravity="center"
                    android:text="연안쓰레기"
                    android:textColor="@color/primary_color_p700"
                    android:textSize="16dp"
                    app:layout_constraintStart_toStartOf="@id/recruit_category_tv"
                    app:layout_constraintTop_toBottomOf="@id/recruit_category_tv" />

                <TextView
                    android:id="@+id/category_2_tv"
                    android:layout_width="97dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/radius_20_solid_bg50"
                    android:fontFamily="@font/pretendard_medium"
                    android:gravity="center"
                    android:text="부유쓰레기"
                    android:textColor="@color/blue_grayscale_bg200"
                    android:textSize="16dp"
                    app:layout_constraintStart_toEndOf="@id/category_1_tv"
                    app:layout_constraintTop_toBottomOf="@id/recruit_category_tv" />

                <TextView
                    android:id="@+id/category_3_tv"
                    android:layout_width="97dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/radius_20_solid_bg50"
                    android:fontFamily="@font/pretendard_medium"
                    android:gravity="center"
                    android:text="침적쓰레기"
                    android:textColor="@color/blue_grayscale_bg200"
                    android:textSize="16dp"
                    app:layout_constraintStart_toEndOf="@id/category_2_tv"
                    app:layout_constraintTop_toBottomOf="@id/recruit_category_tv" />

                <TextView
                    android:id="@+id/category_4_tv"
                    android:layout_width="60dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/radius_20_solid_bg50"
                    android:fontFamily="@font/pretendard_medium"
                    android:gravity="center"
                    android:text="기타"
                    android:textColor="@color/blue_grayscale_bg200"
                    android:textSize="16dp"
                    app:layout_constraintStart_toStartOf="@id/category_1_tv"
                    app:layout_constraintTop_toBottomOf="@id/category_1_tv" />

                <TextView
                    android:id="@+id/recruit_location_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/pretendard_medium"
                    android:text="모집 지역 선택"
                    android:textColor="@color/gray_scale_g900"
                    android:textSize="14dp"
                    app:layout_constraintStart_toStartOf="@id/project_name_tv"
                    app:layout_constraintTop_toBottomOf="@+id/category_4_tv" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="*"
                    android:textColor="@color/primary_color_p500"
                    app:layout_constraintStart_toEndOf="@+id/recruit_location_tv"
                    app:layout_constraintTop_toTopOf="@id/recruit_location_tv" />

                <TextView
                    android:id="@+id/location_1_tv"
                    android:layout_width="97dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/radius_20_solid_p50"
                    android:fontFamily="@font/pretendard_medium"
                    android:gravity="center"
                    android:text="서해번쩍"
                    android:textColor="@color/primary_color_p700"
                    android:textSize="16dp"
                    app:layout_constraintStart_toStartOf="@id/recruit_category_tv"
                    app:layout_constraintTop_toBottomOf="@id/recruit_location_tv" />

                <TextView
                    android:id="@+id/location_2_tv"
                    android:layout_width="97dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/radius_20_solid_bg50"
                    android:fontFamily="@font/pretendard_medium"
                    android:gravity="center"
                    android:text="동해번쩍"
                    android:textColor="@color/blue_grayscale_bg200"
                    android:textSize="16dp"
                    app:layout_constraintStart_toEndOf="@id/category_1_tv"
                    app:layout_constraintTop_toBottomOf="@id/recruit_location_tv" />

                <TextView
                    android:id="@+id/location_3_tv"
                    android:layout_width="97dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/radius_20_solid_bg50"
                    android:fontFamily="@font/pretendard_medium"
                    android:gravity="center"
                    android:text="남해번쩍"
                    android:textColor="@color/blue_grayscale_bg200"
                    android:textSize="16dp"
                    app:layout_constraintStart_toEndOf="@id/category_2_tv"
                    app:layout_constraintTop_toBottomOf="@id/recruit_location_tv" />

                <TextView
                    android:id="@+id/location_4_tv"
                    android:layout_width="97dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/radius_20_solid_bg50"
                    android:fontFamily="@font/pretendard_medium"
                    android:gravity="center"
                    android:text="제주번쩍"
                    android:textColor="@color/blue_grayscale_bg200"
                    android:textSize="16dp"
                    app:layout_constraintStart_toStartOf="@id/category_1_tv"
                    app:layout_constraintTop_toBottomOf="@id/location_1_tv" />

                <TextView
                    android:id="@+id/location_5_tv"
                    android:layout_width="60dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/radius_20_solid_bg50"
                    android:fontFamily="@font/pretendard_medium"
                    android:gravity="center"
                    android:text="기타"
                    android:textColor="@color/blue_grayscale_bg200"
                    android:textSize="16dp"
                    app:layout_constraintStart_toEndOf="@id/location_4_tv"
                    app:layout_constraintTop_toBottomOf="@id/location_1_tv" />

                <TextView
                    android:id="@+id/recruit_date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/pretendard_medium"
                    android:text="모집 기간"
                    android:textColor="@color/gray_scale_g900"
                    android:textSize="14dp"
                    app:layout_constraintStart_toStartOf="@id/project_name_tv"
                    app:layout_constraintTop_toBottomOf="@+id/location_5_tv" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="*"
                    android:textColor="@color/primary_color_p500"
                    app:layout_constraintStart_toEndOf="@+id/recruit_date_tv"
                    app:layout_constraintTop_toTopOf="@id/recruit_date_tv" />

                <LinearLayout
                    android:id="@+id/recruit_start_date_ll"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/custom_radius_8_stroke_p500_solid_fff"
                    android:gravity="left|center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="14dp"
                    app:layout_constraintEnd_toStartOf="@id/recruit_end_date_ll"
                    app:layout_constraintStart_toStartOf="@id/recruit_date_tv"
                    app:layout_constraintTop_toBottomOf="@id/recruit_date_tv">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/calendar_icon" />

                    <TextView
                        android:id="@+id/recruit_start_date_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/pretendard_medium"
                        android:text="시작일"
                        android:textColor="@color/gray_500"
                        android:textSize="16dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/recruit_end_date_ll"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/custom_radius_8_stroke_g300_solid_fff"
                    android:gravity="left|center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="14dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/recruit_start_date_ll"
                    app:layout_constraintTop_toTopOf="@id/recruit_start_date_ll">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/calendar_icon" />

                    <TextView
                        android:id="@+id/recruit_end_date_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/pretendard_medium"
                        android:text="종료일"
                        android:textColor="@color/gray_500"
                        android:textSize="16dp" />

                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/calendar_V"
                    android:layout_width="0dp"
                    android:layout_height="324dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/radius_13_solid_fff"
                    android:elevation="5dp"
                    app:layout_constraintEnd_toEndOf="@id/recruit_end_date_ll"
                    app:layout_constraintStart_toStartOf="@id/recruit_start_date_ll"
                    app:layout_constraintTop_toBottomOf="@id/recruit_start_date_ll">

                    <LinearLayout
                        android:id="@+id/calendar_date_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="27dp"
                        android:orientation="horizontal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/calendar_date_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/se_pro_bold"
                            android:text="@{activityRecruitViewModel.choiceDateText}"
                            android:textColor="@color/black"
                            android:textSize="17dp" />

                        <ImageView
                            android:layout_width="7dp"
                            android:layout_height="12dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="8dp"
                            android:src="@drawable/calendar_next_icon" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/previous_ib"
                        android:layout_width="20dp"
                        android:layout_height="17dp"
                        android:layout_marginEnd="31dp"
                        android:onClick="@{() -> activityRecruitFragment.onMovePreviousMonth()}"
                        android:src="@drawable/calendar_previous_icon"
                        app:layout_constraintEnd_toStartOf="@id/next_ib"
                        app:layout_constraintTop_toTopOf="@id/calendar_date_ll" />

                    <ImageView
                        android:id="@+id/next_ib"
                        android:layout_width="20dp"
                        android:layout_height="17dp"
                        android:layout_marginEnd="16dp"
                        android:onClick="@{() -> activityRecruitFragment.onMoveNextMonth()}"
                        android:src="@drawable/calendar_next_icon"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/calendar_date_ll" />

                    <LinearLayout
                        android:id="@+id/week_ll"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/calendar_date_ll">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/se_pro_bold"
                            android:gravity="center"
                            android:text="SUN"
                            android:textColor="#4D3C3C43" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/se_pro_bold"
                            android:gravity="center"
                            android:text="MON"
                            android:textColor="#4D3C3C43" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/se_pro_bold"
                            android:gravity="center"
                            android:text="TUE"
                            android:textColor="#4D3C3C43" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/se_pro_bold"
                            android:gravity="center"
                            android:text="WED"
                            android:textColor="#4D3C3C43" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/se_pro_bold"
                            android:gravity="center"
                            android:text="THU"
                            android:textColor="#4D3C3C43" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/se_pro_bold"
                            android:gravity="center"
                            android:text="FRI"
                            android:textColor="#4D3C3C43" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/se_pro_bold"
                            android:gravity="center"
                            android:text="SAT"
                            android:textColor="#4D3C3C43" />

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/calendar_rv"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@id/week_ll"
                        app:layout_constraintStart_toStartOf="@id/week_ll"
                        app:layout_constraintTop_toBottomOf="@id/week_ll" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/activity_start_date_text_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/pretendard_medium"
                    android:text="활동 시작일"
                    android:textColor="@color/gray_scale_g900"
                    android:textSize="14dp"
                    app:layout_constraintStart_toStartOf="@id/recruit_date_tv"
                    app:layout_constraintTop_toBottomOf="@+id/calendar_V" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="*"
                    android:textColor="@color/primary_color_p500"
                    app:layout_constraintStart_toEndOf="@+id/activity_start_date_text_tv"
                    app:layout_constraintTop_toTopOf="@id/activity_start_date_text_tv" />

                <LinearLayout
                    android:id="@+id/activity_start_date_ll"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/custom_radius_8_stroke_p500_solid_fff"
                    android:gravity="left|center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="14dp"
                    app:layout_constraintEnd_toStartOf="@id/activity_end_date_ll"
                    app:layout_constraintStart_toStartOf="@id/recruit_date_tv"
                    app:layout_constraintTop_toBottomOf="@id/activity_start_date_text_tv">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/calendar_icon" />

                    <TextView
                        android:id="@+id/activity_start_date_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/pretendard_medium"
                        android:text="활동 시작일"
                        android:textColor="@color/gray_500"
                        android:textSize="16dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/activity_end_date_ll"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/custom_radius_8_stroke_g300_solid_fff"
                    android:gravity="left|center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="14dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/activity_start_date_ll"
                    app:layout_constraintTop_toTopOf="@id/activity_start_date_ll">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/calendar_icon" />

                    <TextView
                        android:id="@+id/end_date_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/pretendard_medium"
                        android:text="시작 시간"
                        android:textColor="@color/gray_500"
                        android:textSize="16dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/date_start_spinner_ll"
                    android:layout_width="156dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/activity_start_date_ll">

                    <NumberPicker
                        android:layout_width="0dp"
                        android:layout_height="178dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:id="@+id/hour_picker"
                        android:theme="@style/datePickerCustomSize"
                        app:layout_constraintEnd_toEndOf="@id/activity_end_date_ll"
                        app:layout_constraintStart_toStartOf="@id/activity_start_date_ll"
                        app:layout_constraintTop_toBottomOf="@id/activity_start_date_tv" />

                    <NumberPicker
                        android:layout_width="0dp"
                        android:layout_height="178dp"
                        android:id="@+id/minute_picker"
                        android:layout_weight="1"
                        android:background="@null"
                        android:theme="@style/datePickerCustomSize"
                        app:layout_constraintEnd_toEndOf="@id/activity_end_date_ll"
                        app:layout_constraintStart_toStartOf="@id/activity_start_date_ll"
                        app:layout_constraintTop_toBottomOf="@id/activity_start_date_ll" />

                    <NumberPicker
                        android:layout_width="0dp"
                        android:layout_height="178dp"
                        android:layout_weight="1"
                        android:id="@+id/morning_and_afternoon_picker"
                        android:background="@null"
                        android:theme="@style/datePickerCustomSize"
                        app:layout_constraintEnd_toEndOf="@id/activity_end_date_ll"
                        app:layout_constraintStart_toStartOf="@id/activity_start_date_ll"
                        app:layout_constraintTop_toBottomOf="@id/activity_start_date_ll" />

                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="34dp"
                    android:background="@drawable/custom_radius8_solid_14747480"
                    app:layout_constraintBottom_toBottomOf="@id/date_start_spinner_ll"
                    app:layout_constraintEnd_toEndOf="@id/activity_end_date_ll"
                    app:layout_constraintStart_toStartOf="@id/activity_start_date_ll"
                    app:layout_constraintTop_toTopOf="@id/date_start_spinner_ll" />

                <TextView
                    android:id="@+id/guide_activity_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/pretendard_medium"
                    android:text="활동 프로그램 안내"
                    android:textColor="@color/gray_scale_g900"
                    android:textSize="14dp"
                    app:layout_constraintStart_toStartOf="@id/project_name_tv"
                    app:layout_constraintTop_toBottomOf="@+id/date_start_spinner_ll" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="*"
                    android:textColor="@color/primary_color_p500"
                    app:layout_constraintStart_toEndOf="@+id/guide_activity_tv"
                    app:layout_constraintTop_toTopOf="@id/guide_activity_tv" />

                <EditText
                    android:id="@+id/guide_activity_et"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="16dp"
                    android:backgroundTint="@color/blue_grayscale_bg100"
                    android:hint="ex.12시 집결"
                    android:maxLength="30"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:textColorHint="@color/blue_grayscale_bg200"
                    android:textSize="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/project_name_tv"
                    app:layout_constraintTop_toBottomOf="@id/guide_activity_tv" />

                <TextView
                    android:id="@+id/material_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/pretendard_medium"
                    android:text="준비물"
                    android:textColor="@color/gray_scale_g900"
                    android:textSize="14dp"
                    app:layout_constraintStart_toStartOf="@id/project_name_tv"
                    app:layout_constraintTop_toBottomOf="@+id/guide_activity_et" />

                <EditText
                    android:id="@+id/material_et"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="16dp"
                    android:backgroundTint="@color/blue_grayscale_bg100"
                    android:hint="ex.긴상하의"
                    android:maxLength="30"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:textColorHint="@color/blue_grayscale_bg200"
                    android:textSize="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/project_name_tv"
                    app:layout_constraintTop_toBottomOf="@id/material_tv" />

                <TextView
                    android:id="@+id/reward_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/pretendard_medium"
                    android:text="참여 키퍼 리워드 여부"
                    android:textColor="@color/gray_scale_g900"
                    android:textSize="16dp"
                    app:layout_constraintStart_toStartOf="@id/activity_location_tv"
                    app:layout_constraintTop_toBottomOf="@id/material_et" />

                <Switch
                    android:id="@+id/reward_swtich"
                    android:layout_width="44dp"
                    android:layout_height="24dp"
                    app:layout_constraintBottom_toBottomOf="@id/reward_tv"
                    app:layout_constraintEnd_toEndOf="@id/activity_end_date_ll"
                    app:layout_constraintTop_toTopOf="@id/reward_tv" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/reward_ll"
                    android:layout_width="0dp"
                    android:layout_height="96dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintEnd_toEndOf="@id/reward_swtich"
                    app:layout_constraintStart_toStartOf="@id/reward_tv"
                    app:layout_constraintTop_toBottomOf="@id/reward_tv">

                    <TextView
                        android:id="@+id/give_reward_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_medium"
                        android:text="제공 리워드"
                        android:textColor="@color/gray_scale_g900"
                        android:textSize="14dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/give_reward_et"
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginEnd="16dp"
                        android:backgroundTint="@color/blue_grayscale_bg100"
                        android:hint="ex.점심 제공"
                        android:maxLength="30"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp"
                        android:textColorHint="@color/blue_grayscale_bg200"
                        android:textSize="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/give_reward_tv"
                        app:layout_constraintTop_toBottomOf="@id/give_reward_tv" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/other_guide_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/pretendard_medium"
                    android:text="기타 안내 사항"
                    android:textColor="@color/gray_scale_g900"
                    android:textSize="14dp"
                    app:layout_constraintStart_toStartOf="@id/project_name_tv"
                    app:layout_constraintTop_toBottomOf="@+id/reward_ll" />

                <EditText
                    android:id="@+id/other_guide_et"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="16dp"
                    android:backgroundTint="@color/blue_grayscale_bg100"
                    android:hint="ex.긴상하의"
                    android:maxLength="30"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:textColorHint="@color/blue_grayscale_bg200"
                    android:textSize="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/project_name_tv"
                    app:layout_constraintTop_toBottomOf="@id/other_guide_tv" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/other_guide_et"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:id="@+id/save_bnt_ll"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="96dp"
                android:layout_height="44dp"
                android:text="임시 저장"
                android:id="@+id/temp_save_btn"
                android:background="@drawable/custom_radius8_solid_p500"
                android:textColor="@color/white"
                app:layout_constraintEnd_toStartOf="@+id/next_btn"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toTopOf="@id/next_btn"
                android:textSize="16dp"
                android:fontFamily="@font/pretendard_bold"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="96dp"
                android:layout_height="44dp"
                android:text="다음"
                android:id="@+id/next_btn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="16dp"
                 android:background="@drawable/custom_radius_8_stroke_p500_solid_fff"
                android:textColor="@color/primary_color_p500"
                android:textSize="16dp"
                android:fontFamily="@font/pretendard_bold"/>
            
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>